<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="145dp"
        android:layout_height="40dp"
        android:hint="Result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/n2"
        app:layout_constraintVertical_bias="0.311" />

    <EditText
        android:id="@+id/n2"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_marginBottom="428dp"
        android:ems="10"
        android:hint="Second number "
        android:inputType="number|numberSigned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/n1"
        app:layout_constraintVertical_bias="0.349" />

    <EditText
        android:id="@+id/n1"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:ems="10"
        android:hint="First number"
        android:inputType="number|numberSigned"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />

    <CheckBox
        android:id="@+id/check_suma"
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:onClick="calculate"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <CheckBox
        android:id="@+id/check_resta"
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:onClick="calculate"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_suma"
        app:layout_constraintVertical_bias="0.112" />

    <CheckBox
        android:id="@+id/check_multi"
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:onClick="calculate"
        android:text="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_resta"
        app:layout_constraintVertical_bias="0.121" />

    <CheckBox
        android:id="@+id/check_div"
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:onClick="calculate"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_multi"
        app:layout_constraintVertical_bias="0.153" />

    <CheckBox
        android:id="@+id/check_elevar"
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:onClick="calculate"
        android:text="^"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_div"
        app:layout_constraintVertical_bias="0.221" />

    <CheckBox
        android:id="@+id/check_mod"
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:onClick="calculate"
        android:text="%"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_elevar"
        app:layout_constraintVertical_bias="0.337" />

    <CheckBox
        android:id="@+id/check_arrel"
        android:layout_width="58dp"
        android:layout_height="30dp"
        android:onClick="calculate"
        android:text="âˆš"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_mod"
        app:layout_constraintVertical_bias="0.564" />

    <CheckBox
        android:id="@+id/check_exit"
        android:layout_width="70dp"
        android:layout_height="29dp"
        android:onClick="exit"
        android:text="Exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_clean"
        app:layout_constraintVertical_bias="0.426" />

    <CheckBox
        android:id="@+id/check_clean"
        android:layout_width="79dp"
        android:layout_height="30dp"
        android:onClick="clean"
        android:text="Clean"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/n2"
        app:layout_constraintVertical_bias="0.76" />
</androidx.constraintlayout.widget.ConstraintLayout>